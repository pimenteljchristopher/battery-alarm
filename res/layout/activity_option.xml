<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#132030" >
            <ImageView
               android:id="@+id/settingsicon"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/settings" />
           <TextView
                android:id="@+id/settingview"
                android:layout_width="match_parent"
    		    android:layout_weight="1"
    		    android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:paddingTop="15sp"
                android:paddingBottom="10sp"
                android:paddingLeft="17sp"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="@string/settings" />
           </LinearLayout>
	 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp">
            
        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
		    android:layout_height="80dp"
            android:background="@drawable/ringtone" />
         <TextView
            android:id="@+id/path"
            android:gravity="center"
            android:layout_width="0dp"
    		android:layout_weight="1"
            android:layout_height="wrap_content" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#132030" >
               <ImageView
               android:id="@+id/infoicon"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/get_info" />
          <TextView
                android:id="@+id/infoview"
                android:layout_width="match_parent"
    		    android:layout_weight="1"
    		    android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:paddingLeft="17sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="17sp" 
                android:textColor="#ffffff"
                android:background="#132030" 
                android:text="@string/information" />
          </LinearLayout>
          
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"   >
       
              <ImageView
               android:id="@+id/imageView1"
               android:layout_width="200dp"
               android:layout_height="120dp"
               android:src="@drawable/power_and_bettary" />
   
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
           >    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/healthview"
                android:layout_width="0dp"
    		    android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/battery_health"
                android:textColor="#ffffff"
             />
            <TextView
                android:id="@+id/healthtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
             />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/voltview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:text="@string/battery_voltage"
                 android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/volttext"
                android:layout_width="0dp"
        		android:layout_weight="1"
        		android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                 android:textColor="#ffffff"
              />
             </LinearLayout>
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="5dp"  >
            <TextView
                android:id="@+id/techview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/battery_technology"
                 android:textColor="#ffffff"
             />

            <TextView
                android:id="@+id/techtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                 android:textColor="#ffffff"
              />

        </LinearLayout>
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tempview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/battery_temperature"
                 android:textColor="#ffffff"
             />

            <TextView
                android:id="@+id/temptext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                 android:textColor="#ffffff"
             />

        </LinearLayout>
          
             </LinearLayout>
        </LinearLayout>
    	<com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
        

     
    </LinearLayout>

</ScrollView>