<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/path"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp" />
	 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <TextView
                android:id="@+id/ringtoneview"
                android:layout_width="0dp"
    		    android:layout_weight="1"
    		    android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                 android:textSize="15sp" 
                android:text="Ringtone Sound" />
        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_weight="0.50"
		    android:layout_gravity="start"
            android:background="@drawable/ringtone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/healthview"
                android:layout_width="0dp"
    		    android:layout_weight="1"
    		    android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="Battery Health"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/healthtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>
        </LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/techview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="Battery Technology"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/techtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

        </LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tempview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="Battery Temperature"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temptext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>

        </LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/voltview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="Battery Voltage"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volttext"
                android:layout_width="0dp"
        		android:layout_weight="1"
        		android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

        </LinearLayout>

        

    
        

     
    </LinearLayout>

</ScrollView>